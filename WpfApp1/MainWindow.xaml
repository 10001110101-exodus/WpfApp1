<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow"  ContentRendered="Window_ContentRendered" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" SizeToContent="WidthAndHeight">
    <Canvas Name="GameArea" Height="256" Width="640" ClipToBounds="true" CacheMode="BitmapCache">
        <Canvas.Background>
            <ImageBrush RenderOptions.CachingHint="Cache" ImageSource="/backgroundTile0.png" TileMode="Tile" Stretch="UniformToFill" ViewportUnits="Absolute" ViewboxUnits="RelativeToBoundingBox" Viewport="0,0,128,128"/>
        </Canvas.Background>

    </Canvas>
    
</Window>
